<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97C1FF"
    android:orientation="vertical"
    tools:context=".AboutUsActivity">

    <Button
        android:id="@+id/btnAboutUsBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#C0E96A"
        android:text="Back"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvAboutUsTitle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/noto_sans_bold"
        android:text="About Us"
        android:padding="5dp"
        android:elevation="10dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/ivGroupPicture"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:contentDescription="Group Picture"
        android:background="@drawable/group"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvAboutUs"
        android:layout_width="320dp"
        android:layout_height="275dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/noto_sans"
        android:elevation="10dp"
        android:padding="20dp"
        android:text="Hello everyone! We are a group of four students from Cal Poly all studying in the areas of engineering and computer science who were inspired to create an efficient coronavirus statistics application due to the recent unprecedented global pandemic. Thank you for taking the time to use our app! "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17dp" />

</LinearLayout>