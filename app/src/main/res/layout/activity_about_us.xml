<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63A1FF"
    tools:context=".AboutUsActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAboutUsBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#C0E96A"
        android:text="&lt;-- Back"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvAboutUsTitle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#C4C4C4"
        android:fontFamily="@font/noto_sans_bold"
        android:text="About Us"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/ivGroupPicture"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="Group Picture" />

    <TextView
        android:id="@+id/tvAboutUs"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#DCDCDC"
        android:fontFamily="@font/noto_sans"
        android:padding="10dp"
        android:text="ad adwhdabhshdhbhb ahwbbhhbdhwajkdnj n jw nandjk dnkkajwn j n wjnajdhakjskjdjwjndukwankudnn nd nandnsnkajk dnkja nwndn nnjj jkdwnjdkawjjdk "
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>