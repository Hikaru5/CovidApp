<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvStateTitle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#C4C4C4"
        android:fontFamily="@font/noto_sans_bold"
        android:text="State Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35sp" />

    <View
        android:id="@+id/tvStateInfoContainer"
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:layout_below="@+id/tvStateTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:elevation="10dp"
        android:background="#E6E6E6" />

    <ImageView
        android:id="@+id/ivStatePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tvStateTitle"
        android:translationZ="90dp"
        android:layout_alignStart="@+id/tvStateInfoContainer"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="State Image"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvStateStat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStateTitle"
        android:layout_alignEnd="@+id/tvStateInfoContainer"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivStatePicture"
        android:fontFamily="@font/noto_sans"
        android:text="Deaths: 1000"
        android:textColor="#1A779E"
        android:textSize="16sp"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/tvStateStat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStateStat1"
        android:layout_alignEnd="@+id/tvStateInfoContainer"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivStatePicture"
        android:fontFamily="@font/noto_sans"
        android:text="Total Cases: 1000"
        android:textColor="#1A779E"
        android:textSize="16sp"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/tvStateStat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStateStat2"
        android:layout_alignEnd="@+id/tvStateInfoContainer"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivStatePicture"
        android:fontFamily="@font/noto_sans"
        android:text="Recovered: 1000"
        android:textColor="#1A779E"
        android:textSize="16sp"
        android:translationZ="90dp" />

    <Button
        android:id="@+id/btnStateSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvStateInfoContainer"
        android:layout_alignTop="@+id/tvStateTitle"
        android:layout_alignEnd="@+id/tvStateTitle"
        android:layout_alignBottom="@+id/tvStateInfoContainer"
        android:layout_marginEnd="0dp"
        android:background="@android:color/transparent" />

</RelativeLayout>